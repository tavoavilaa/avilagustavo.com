---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Form from '../components/Form.astro';
import FabTop from '../components/FabTop.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, url, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-gray-50 dark:bg-gray-900 relative">
		
		<FabTop/>
		<div class="bg-white dark:bg-gray-900 max-w-screen-xl mx-auto border  border-gray-200 dark:border-gray-800">
			<Header />
		<main class="max-w-screen-lg mx-auto">
			<article class="p-6">
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title mt-8">
						<div class="flex justify-between items-center">
							<h2 class="text-gray-900 dark:text-white text-4xl font-extrabold mb-2">{title}</h2>
						</div>
						<hr class="dark:border-gray-800"/>
					</div>
					<div class="blogLayout mt-4 text-lg font-normal text-gray-900 dark:text-gray-50">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<br>
		<hr class="dark:border-gray-800">
		<section class="max-w-screen-lg mx-auto relative mt-16 px-6">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
			  <div class="lg:order-first lg:row-span-2 lg:mt-32">
				<h2 class="text-5xl font-bold tracking-tight dark:text-white">
				  Contáctame
				</h2>
				<div class="mt-2 text-base leading-8 text-gray-600 dark:text-white">
				  <p class="mb-4 leading-normal">
					Si te gustó mi experiencia, me encantaría que me envíaras un mensaje con tu propuesta o idea.
				  </p>
				</div>
			  </div>
			  <div>
				<Form/>
			  </div>
			 
			</div>
		  </section>
		<Footer />
		</div>
	</body>
</html>
