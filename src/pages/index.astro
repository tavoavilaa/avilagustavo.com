---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FabTop from "../components/FabTop.astro";
import Form from "../components/Form.astro";
import Card from '../components/Card.astro';

const projects = (await getCollection('proyectos')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-spring-green-50 dark:bg-shark-950">
  <div class="noise"></div>
  <div class="bg-grid bg-white dark:bg-shark-950  max-w-screen-xl mx-auto border  border-gray-200 dark:border-gray-800 relative">
    <Header title={SITE_TITLE} />
    <FabTop/>
    <!-- <div class="flare pulsate-bck"></div> -->
    <div class="flare2 pulsate-bck"></div>
    
    <main class="max-w-screen-lg mx-auto">
      <section class="mt-16 px-6 hero">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="px-6">
            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script> 
            <lottie-player src="https://lottie.host/00fa0de4-fd1e-4659-a703-ccde2985c638/aXUdaJRt1O.json" background="transparent" speed="1" style="width: 100%;" loop autoplay></lottie-player>
          </div>
          <div class="lg:order-first lg:row-span-2 text-center lg:text-left ">
            <span class="bg-spring-green-200 text-spring-green-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md dark:bg-gray-700 dark:text-spring-green-400 mb-2">
              <svg class="w-2.5 h-2.5 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4 1 8l4 4m10-8 4 4-4 4M11 1 9 15"/>
            </svg>
              Desarrollo y Diseño Web
            </span>
            <h2 class="block lg:hidden text-center lg:text-left mt-4 text-5xl lg:text-6xl relative z-10 font-bold text-gray-700 dark:text-gray-50   md:text-left pb-2 px-18 md:px-0">
              Gustavo Avila
            </h2>
            <h1 class="text-center lg:text-left mt-4 text-2xl lg:text-5xl relative z-10 font-bold text-gray-700 dark:text-gray-50   md:text-left block  pb-2 px-18 md:px-0">
              Transformando
              ideas
              en <span class="idea">experiencias</span> digitales memorables.
            </h1>
            <div class="mt-8 text-base leading-8 text-gray-600 dark:text-white">
              <div class="rrss flex flex-col md:flex-row gap-6 items-center mt-2 ms-2">
                <div class="flex gap-6 mt-2">
                  <a class="flex gap-1 text-gray-700 dark:text-gray-100 hover:text-spring-green-600 hover:dark:text-spring-green-100 transition-colors" href="https://github.com/tavoavilaa" target="_blank">
                    <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
                    <span class="inline-block leading-2">Github</span>
                  </a>
                  <a class="flex gap-1 text-gray-700 dark:text-gray-100 hover:text-spring-green-600 hover:dark:text-spring-green-100 transition-colors" href="https://www.linkedin.com/in/gustavo-avila-2a153311b/" target="_blank">
                    <svg class="w-8 h-8"  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" /><path d="M8 11l0 5" /><path d="M8 8l0 .01" /><path d="M12 16l0 -5" /><path d="M16 16v-3a2 2 0 0 0 -4 0" /></svg>
                      
                    <span class="inline-block leading-2">Linkedin</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <section class="max-w-screen-lg mx-auto mb-16 grid grid-cols-1 md:grid-cols-2  gap-10 place-items-center mt-12 relative z-0 px-6">
      <div class="flare4 pulsate-bck"></div>
      {
        projects.map((project) => (
          <Card project={project}/>
        ))
      }
    </section>
    <br>
		<hr class="dark:border-gray-800">

    <section class="max-w-screen-lg mx-auto relative lg:mt-16 px-6 ">
      <div class="flare5 pulsate-bck"></div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 relative">
        <div class="lg:order-first lg:row-span-2 lg:mt-32">
          <h2 class="text-5xl font-bold tracking-tight dark:text-white">
            Contáctame
          </h2>
          <div class="mt-2 text-base leading-8 text-gray-600 dark:text-white">
            <p class="mb-4 leading-normal">
              Si has llegado hasta aquí, me encantaría que me envíaras un mensaje con tu propuesta o idea.
            </p>
          </div>
        </div>
        <div>
          <Form/>
        </div>
       
      </div>
    </section>
    

    
  

    <Footer />
  </div>
  </body>
</html>
