---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FabTop from "../components/FabTop.astro";
import Form from "../components/Form.astro";

const projects = (await getCollection('proyectos')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 ">
  <div class="bg-grid bg-white dark:bg-gray-900  max-w-screen-xl mx-auto border  border-gray-200 dark:border-gray-800 relative">
    <Header title={SITE_TITLE} />
    <FabTop/>
    <div class="flare pulsate-bck"></div>
    <main class="max-w-screen-lg mx-auto">
      <section class="mt-16 px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script> 


    <lottie-player src="https://lottie.host/00fa0de4-fd1e-4659-a703-ccde2985c638/aXUdaJRt1O.json" background="transparent" speed="1" style="width: 100%;" loop autoplay></lottie-player>
          </div>
          <div class="lg:order-first lg:row-span-2 lg:mt-32">
            <h1 class="text-6xl text-center md:text-left font-bold tracking-tight dark:text-white">
              Gustavo Avila
            </h1>
            <div class="mt-2 text-base leading-8 text-gray-600 dark:text-white">
              <p class="text-lg font-normal text-gray-500 dark:text-gray-200 text-center md:text-left md:border-b border-0 border-gray-200 dark:border-gray-800 block md:inline pb-4 px-18 md:px-0">
                 Diseñador UX/UI y Desarrollador Frontend
              </p>
         
          
              
            <div class="rrss flex flex-col md:flex-row gap-6 items-center mt-8">
              <a href="https://drive.google.com/file/d/1BTQDU4dJhR8Ny2_GVVyHYAVeucRjaSaG/view?usp=sharing"
              target="_blank" type="button" class="transition-all duration-75 delay-0 ease-in-out text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Curriculum</a>

              <div class="flex gap-6 mt-2">
                <a class="flex gap-2" href="https://github.com/tavoavilaa" target="_blank">
                  <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z" clip-rule="evenodd"/>
                  </svg>
                  Github
                </a>
                <a class="flex gap-2" href="https://www.linkedin.com/in/gustavo-avila-2a153311b/" target="_blank">
                  <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 15 15">
                    <path fill-rule="evenodd" d="M7.979 5v1.586a3.5 3.5 0 0 1 3.082-1.574C14.3 5.012 15 7.03 15 9.655V15h-3v-4.738c0-1.13-.229-2.584-1.995-2.584-1.713 0-2.005 1.23-2.005 2.5V15H5.009V5h2.97ZM3 2.487a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" clip-rule="evenodd"/>
                    <path d="M3 5.012H0V15h3V5.012Z"/>
                  </svg>
                    
                  Linkedin
                </a>
              </div>

              
            </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <section class="max-w-screen-lg mx-auto mb-16 grid grid-cols-1 md:grid-cols-2  gap-10 place-items-center mt-12 ">

      {
        projects.map((project) => (
        <div>
        <div
        class="max-w-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
      >
        <a href={`/proyectos/${project.slug}/`}>
          <img class="rounded-t-lg" src={project.data.heroImage} alt={project.data.title} />
        </a>
        <div class="p-5">
            {
              project.data.category == 'Frontend' 
              ?  <span class="bg-tiber-100 text-tiber-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md dark:bg-gray-700 dark:text-tiber-400 mb-2">
                  <svg class="w-2.5 h-2.5 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4 1 8l4 4m10-8 4 4-4 4M11 1 9 15"/>
                  </svg>
                  {project.data.category}
              </span>

              :  <span class="bg-spring-green-100 text-spring-green-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md dark:bg-gray-700 dark:text-spring-green-400 mb-2">
                  <svg class="w-2.5 h-2.5 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                      <path d="M17 11h-2.722L8 17.278a5.512 5.512 0 0 1-.9.722H17a1 1 0 0 0 1-1v-5a1 1 0 0 0-1-1ZM6 0H1a1 1 0 0 0-1 1v13.5a3.5 3.5 0 1 0 7 0V1a1 1 0 0 0-1-1ZM3.5 15.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2ZM16.132 4.9 12.6 1.368a1 1 0 0 0-1.414 0L9 3.55v9.9l7.132-7.132a1 1 0 0 0 0-1.418Z"/>
                  </svg>
                  {project.data.category}
              </span>
            }
    
            <h5
              class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
              {project.data.title}
          </h5>
          <p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-400">
              {project.data.description}
          </p>
     
          <div class="flex gap-4">
            <a href={project.data.url}
              target="_blank" type="button" class="transition-all duration-75 delay-0 ease-in-out text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Ver demo</a>

            <a href={`/proyectos/${project.slug}/`} type="button" class="border border-gray-300 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm px-5 py-2.5">
              Ver más
            </a>  
          </div>

        </div>
        </div>
      </div>
        ))
      }

   
     



    </section>

    <br>
		<hr class="dark:border-gray-800">
    <section class="max-w-screen-lg mx-auto relative mt-16 px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="lg:order-first lg:row-span-2 lg:mt-32">
          <h2 class="text-5xl font-bold tracking-tight dark:text-white">
            Contáctame
          </h2>
          <div class="mt-2 text-base leading-8 text-gray-600 dark:text-white">
            <p class="mb-4 leading-normal">
              Si has llegado hasta aquí, me encantaría que me envíaras un mensaje con tu propuesta o idea.
            </p>
          </div>
        </div>
        <div>
          <Form/>
        </div>
       
      </div>
    </section>
    

    
  

    <Footer />
  </div>
  </body>
</html>
